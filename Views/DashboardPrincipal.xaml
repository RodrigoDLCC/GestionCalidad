<Window x:Class="GestionCalidad.Views.DashboardPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Documentos - Oficina de Calidad" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="EntityButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="SISTEMA DE GESTIÓN DOCUMENTAL" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#1976D2"
                       Margin="0,0,0,5"/>

            <TextBlock Text="Oficina de Gestión de la Calidad" 
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Foreground="#757575"
                       Margin="0,0,0,15"/>

            <TextBlock x:Name="txtUsuario" 
                       HorizontalAlignment="Right"
                       FontStyle="Italic"
                       Foreground="#616161"/>
        </StackPanel>

        <!-- Panel de entidades - Ahora se cargará dinámicamente -->
        <ItemsControl x:Name="EntitiesItemsControl" Grid.Row="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" Rows="3"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Style="{StaticResource EntityButtonStyle}"
                            Tag="{Binding Id}"
                            Click="EntityButton_Click"
                            Margin="15">
                        <StackPanel>
                            <Image Source="{Binding ImagenUrl}" 
                                   Width="120" 
                                   Height="120"
                                   Stretch="Uniform"/>
                            <TextBlock Text="{Binding Nombre}" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                            <TextBlock Text="{Binding Descripcion}" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       MaxWidth="150"
                                       Foreground="#757575"
                                       FontSize="12"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Botón para todos los documentos -->
        <Button x:Name="btnTodos" 
                Grid.Row="1"
                Style="{StaticResource EntityButtonStyle}"
                Tag="TODOS"
                Click="EntityButton_Click"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Width="200">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resources/all.png" Width="24" Height="24" Margin="0,0,10,0"/>
                <TextBlock Text="Ver Todos los Documentos" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Button>

        <!-- Pie de página -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cerrar Sesión" 
                    Click="BtnCerrarSesion_Click"
                    Margin="5"
                    Width="120"
                    Background="#F44336"
                    Foreground="White"/>
        </StackPanel>

        <!-- Progress bar para cuando se cargan las entidades -->
        <Border x:Name="LoadingOverlay" Grid.Row="1" Background="#80000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="Cargando entidades..." Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>