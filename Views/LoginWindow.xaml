<Window x:Class="GestionCalidad.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión - Sistema de Gestión Documental GECA"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            Margin="20"
            Effect="{StaticResource ShadowEffect}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#1976D2" CornerRadius="10,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                    <Image Source="/Resources/logo.png" Width="40" Height="40" Margin="0,0,10,0"/>
                    <TextBlock Text="Sistema de Gestión Documental" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="30">
                <TextBlock Text="Bienvenido" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Foreground="#333333"/>

                <Image Source="/Resources/google-logo.png" 
                       Width="80" 
                       Height="80" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                <TextBlock Text="Inicia sesión con tu cuenta institucional" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,30"
                           Foreground="#666666"
                           TextWrapping="Wrap"/>

                <Button x:Name="BtnGoogleLogin" 
                        Content="Iniciar con Google" 
                        Click="BtnGoogleLogin_Click"
                        Background="#4285F4"
                        Style="{StaticResource LoginButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="/Resources/google-icon.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Iniciar con Google" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <TextBlock Text="O" 
                           HorizontalAlignment="Center" 
                           Margin="0,10"
                           Foreground="#666666"/>

                <!-- Modo desarrollo/testing -->
                <Button x:Name="BtnTestLogin" 
                        Content="Modo Pruebas (Rodrigo)" 
                        Click="BtnTestLogin_Click"
                        Background="#FF5722"
                        Style="{StaticResource LoginButtonStyle}"
                        ToolTip="Usar para testing sin autenticación real"/>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="0,0,10,10">
                <TextBlock Text="© 2024 Oficina de Gestión de la Calidad - Universidad" 
                           HorizontalAlignment="Center" 
                           Margin="10"
                           Foreground="#666666"
                           FontSize="11"/>
            </Border>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" Grid.RowSpan="3" Background="#80000000" 
                    CornerRadius="10" Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                    <TextBlock Text="Iniciando sesión..." Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>