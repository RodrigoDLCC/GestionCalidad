<Window x:Class="GestionCalidad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionCalidad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Button Content="Registrar Documento" 
                Click="BtnAbrirRegistro_Click" 
                Width="200" Height="40" Margin="0,0,0,10"/>

            <Button Content="Listar Documentos" 
                Click="BtnAbrirListado_Click" 
                Width="200" Height="40"/>
        </StackPanel>
    </Grid>
</Window>